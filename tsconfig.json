{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "declaration": true,
    "declarationDir": "dist",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "lib": [
      "ES2020",
      "DOM"
    ],
    "types": [
      "node",
      "vitest/globals"
    ],
    "jsx": "react-jsx"
  },
  "include": [
    "src/**/*",
    "locales/**/*",
    "src/types/vue-i18n.d.ts"
  ]
}